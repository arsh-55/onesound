<section class="hero">
  <video autoplay muted playsinline loop id="heroVideo" class="hero-video">
    <source src="{{ 'hero.mp4' | asset_url }}" type="video/mp4">
  </video>

  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1>Welcome to {{ shop.name }}</h1>
    <p>Premium sound. Engineered design.</p>
    <a href="/collections/all" class="hero-button">Shop Now</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [],
  "presets": [
    { "name": "Hero" }
  ]
}
{% endschema %}
